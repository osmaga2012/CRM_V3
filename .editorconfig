root = true

# Default settings for all files
[*]
charset = utf-8-bom
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# C# and Razor files
[*.{cs,razor}]
charset = utf-8-bom
indent_size = 4
end_of_line = lf

# HTML, CSS, JavaScript files
[*.{html,css,js,json}]
charset = utf-8-bom
indent_size = 2
end_of_line = lf

# XML project files
[*.{csproj,props,targets}]
charset = utf-8-bom
indent_size = 2

# Markdown files
[*.md]
charset = utf-8-bom
trim_trailing_whitespace = false
