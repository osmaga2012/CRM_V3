@page "/usuario/{UsuarioId:long}"
@page "/usuario/nuevo"
@inject NavigationManager NavigationManager
@using CRM.Dtos
@using CRM.V3.Shared.Interfaces
@inject IApiClient<UsuarioDto> servicioUsuarios
@inject IApiClient<EmpresasDto> servicioEmpresas
@inject IApiClient<BarcosDto> servicioBarcos

<PageTitle>@(esNuevo ? "Nuevo Usuario" : "Editar Usuario")</PageTitle>

@if (isLoading)
{
    <div class="flex items-center justify-center min-h-screen">
        <div class="text-center">
            <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-sky-600"></div>
            <p class="mt-4 text-slate-600">Cargando...</p>
        </div>
    </div>
}
else
{
    <div class="w-full p-4 md:p-6 lg:p-8">
        <!-- Header -->
        <div class="bg-gradient-to-br from-sky-50 to-blue-100 rounded-2xl border-2 border-sky-200 p-6 md:p-8 mb-6 shadow-lg">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="bg-gradient-to-br from-sky-500 to-blue-600 text-white w-16 h-16 flex items-center justify-center rounded-2xl shadow-xl">
                        <span class="material-symbols-outlined text-4xl">@(esNuevo ? "person_add" : "edit")</span>
                    </div>
                    <div>
                        <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-slate-900">
                            @(esNuevo ? "Nuevo Usuario" : "Editar Usuario")
                        </h1>
                        <p class="text-slate-600 mt-1">
                            @(esNuevo ? "Complete los datos del nuevo usuario" : $"Modificando: {usuario.Nombre} {usuario.Apellidos}")
                        </p>
                    </div>
                </div>
                <button @onclick="Volver"
                        class="text-slate-400 hover:text-slate-600 transition-colors">
                    <span class="material-symbols-outlined text-3xl">close</span>
                </button>
            </div>
        </div>

        <!-- Formulario -->
        <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="p-6 md:p-8">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4 flex items-start gap-3">
                        <span class="material-symbols-outlined text-red-600">error</span>
                        <div>
                            <p class="text-red-800 font-semibold">Error</p>
                            <p class="text-red-700 text-sm">@errorMessage</p>
                        </div>
                    </div>
                }

                <div class="space-y-6">
                    <!-- Información Personal -->
                    <div>
                        <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                            <span class="material-symbols-outlined">person</span>
                            Información Personal
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Nombre *</label>
                                <input @bind="usuario.Nombre" 
                                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none"
                                       placeholder="Nombre" />
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Apellidos *</label>
                                <input @bind="usuario.Apellidos" 
                                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none"
                                       placeholder="Apellidos" />
                            </div>
                        </div>
                    </div>

                    <!-- Información de Contacto -->
                    <div>
                        <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                            <span class="material-symbols-outlined">contact_mail</span>
                            Información de Contacto
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Email *</label>
                                <input type="email" @bind="usuario.EMail" 
                                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none"
                                       placeholder="correo@ejemplo.com" />
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Teléfono</label>
                                <input type="tel" @bind="usuario.Telefono" 
                                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none"
                                       placeholder="+34 XXX XXX XXX" />
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Email para Avisos</label>
                                <input type="email" @bind="usuario.EMailAvisos" 
                                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none"
                                       placeholder="Por defecto se usa el email principal" />
                            </div>
                        </div>
                    </div>

                    <!-- Información de Acceso -->
                    <div>
                        <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                            <span class="material-symbols-outlined">key</span>
                            Información de Acceso
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">NIF *</label>
                                <input @bind="usuario.NIFAcceso" 
                                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none"
                                       placeholder="12345678A"
                                       disabled="@(!esNuevo)" />
                                @if (!esNuevo)
                                {
                                    <p class="text-xs text-slate-500 mt-1">El NIF no se puede modificar</p>
                                }
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Nombre de Usuario</label>
                                <input @bind="usuario.NombreUsuario" 
                                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none"
                                       placeholder="Se generará automáticamente si se deja vacío" />
                            </div>
                            @if (esNuevo)
                            {
                                <div class="md:col-span-2">
                                    <label class="block text-sm font-semibold text-slate-700 mb-2">Contraseña *</label>
                                    <input type="password" @bind="usuario.PasswordHash" 
                                           class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none"
                                           placeholder="Contraseña segura (mínimo 6 caracteres)" />
                                    <p class="text-xs text-slate-500 mt-1">La contraseña debe tener al menos 6 caracteres</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Información de Empresa y Rol -->
                    <div>
                        <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                            <span class="material-symbols-outlined">business</span>
                            Empresa y Rol
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Empresa</label>
                                <select @bind="usuario.CodigoEmpresa" 
                                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none">
                                    <option value="">Sin empresa asignada</option>
                                    @foreach (var empresa in empresas)
                                    {
                                        <option value="@empresa.CodigoEmpresa">@empresa.NombreArmador</option>
                                    }
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Rol *</label>
                                <select @bind="usuario.Rol" 
                                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 outline-none">
                                    <option value="Cliente">Cliente</option>
                                    <option value="Administrador">Administrador</option>
                                    <option value="Asistente">Asistente</option>
                                    <option value="Gestoria">Gestoria</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Estado -->
                    <div>
                        <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                            <span class="material-symbols-outlined">settings</span>
                            Estado
                        </h2>
                        <div class="flex items-center gap-3">
                            <input type="checkbox" @bind="usuario.Activo" 
                                   class="w-5 h-5 text-sky-600 border-slate-300 rounded focus:ring-2 focus:ring-sky-500" 
                                   id="usuarioActivo" />
                            <label for="usuarioActivo" class="text-sm font-semibold text-slate-700">Usuario Activo</label>
                        </div>
                    </div>

                    @if (!esNuevo && usuario.Empresa != null)
                    {
                        <!-- Información de Empresa Asignada -->
                        <div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-6">
                            <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                                <span class="material-symbols-outlined">corporate_fare</span>
                                Datos de la Empresa Asignada
                            </h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-semibold text-slate-600 mb-1">Nombre del Armador</label>
                                    <p class="text-slate-900 font-medium">@usuario.Empresa.NombreArmador</p>
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-slate-600 mb-1">CIF/NIF</label>
                                    <p class="text-slate-900 font-medium">@usuario.Empresa.CifNif</p>
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-slate-600 mb-1">Teléfono</label>
                                    <p class="text-slate-900 font-medium">@usuario.Empresa.Telefono</p>
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-slate-600 mb-1">Email</label>
                                    <p class="text-slate-900 font-medium">@usuario.Empresa.Email</p>
                                </div>
                                <div class="md:col-span-2">
                                    <label class="block text-sm font-semibold text-slate-600 mb-1">Dirección</label>
                                    <p class="text-slate-900 font-medium">
                                        @usuario.Empresa.Direccion
                                        @if (!string.IsNullOrEmpty(usuario.Empresa.CodigoPostal) || !string.IsNullOrEmpty(usuario.Empresa.Localidad))
                                        {
                                            <span>, @usuario.Empresa.CodigoPostal @usuario.Empresa.Localidad</span>
                                        }
                                        @if (!string.IsNullOrEmpty(usuario.Empresa.Provincia))
                                        {
                                            <span>, @usuario.Empresa.Provincia</span>
                                        }
                                    </p>
                                </div>
                            </div>

                            @if (usuario.Empresa.Barco != null)
                            {
                                <!-- Información del Barco -->
                                <div class="mt-6 pt-6 border-t-2 border-blue-200">
                                    <h3 class="text-lg font-bold text-slate-900 mb-4 flex items-center gap-2">
                                        <span class="material-symbols-outlined">directions_boat</span>
                                        Barco de la Empresa
                                    </h3>
                                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                        <div>
                                            <label class="block text-sm font-semibold text-slate-600 mb-1">Nombre del Barco</label>
                                            <p class="text-slate-900 font-medium">@usuario.Empresa.Barco.NombreB</p>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-semibold text-slate-600 mb-1">Censo</label>
                                            <p class="text-slate-900 font-medium">@usuario.Empresa.Barco.Censo</p>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-semibold text-slate-600 mb-1">Matrícula</label>
                                            <p class="text-slate-900 font-medium">@usuario.Empresa.Barco.Matricula</p>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-semibold text-slate-600 mb-1">Tipo de Barco</label>
                                            <p class="text-slate-900 font-medium">@usuario.Empresa.Barco.TipoBarco</p>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-semibold text-slate-600 mb-1">Puerto</label>
                                            <p class="text-slate-900 font-medium">@usuario.Empresa.Barco.Puerto</p>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-semibold text-slate-600 mb-1">Capitán</label>
                                            <p class="text-slate-900 font-medium">@usuario.Empresa.Barco.CapitanNombre</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Información de Barcos Disponibles -->
                    <div>
                        <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                            <span class="material-symbols-outlined">directions_boat</span>
                            Barcos Disponibles en el Sistema
                        </h2>
                        <div class="bg-slate-50 border border-slate-200 rounded-lg p-4">
                            <p class="text-sm text-slate-600 mb-2">Total de barcos registrados: <span class="font-bold text-slate-900">@barcos.Count</span></p>
                            @if (barcos.Any())
                            {
                                <div class="max-h-48 overflow-y-auto">
                                    <table class="w-full text-sm">
                                        <thead class="bg-slate-100 sticky top-0">
                                            <tr>
                                                <th class="text-left p-2 font-semibold text-slate-700">Nombre</th>
                                                <th class="text-left p-2 font-semibold text-slate-700">Censo</th>
                                                <th class="text-left p-2 font-semibold text-slate-700">Matrícula</th>
                                                <th class="text-left p-2 font-semibold text-slate-700">Puerto</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var barco in barcos)
                                            {
                                                <tr class="border-b border-slate-200">
                                                    <td class="p-2">@barco.NombreB</td>
                                                    <td class="p-2">@barco.Censo</td>
                                                    <td class="p-2">@barco.Matricula</td>
                                                    <td class="p-2">@barco.Puerto</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-slate-500 text-sm">No hay barcos registrados en el sistema.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="bg-slate-50 border-t border-slate-200 px-6 py-4 flex justify-end gap-3">
                <button @onclick="Volver"
                        class="px-6 py-2 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-100 font-semibold transition-colors">
                    Cancelar
                </button>
                <button @onclick="GuardarUsuario"
                        disabled="@guardando"
                        class="px-6 py-2 bg-sky-600 text-white rounded-lg hover:bg-sky-700 font-semibold flex items-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                    @if (guardando)
                    {
                        <span class="inline-block animate-spin rounded-full h-4 w-4 border-b-2 border-white"></span>
                        <span>Guardando...</span>
                    }
                    else
                    {
                        <span class="material-symbols-outlined text-lg">save</span>
                        <span>@(esNuevo ? "Crear Usuario" : "Guardar Cambios")</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

